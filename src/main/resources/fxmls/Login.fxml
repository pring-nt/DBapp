<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane
        xmlns="http://javafx.com/javafx/24.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.gymdb.controller.LoginController"
        prefHeight="400.0" prefWidth="600.0">

   <children>
      <!-- Background -->
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../pngs/login_bg.png" />
         </image>
      </ImageView>

      <!-- Username Field -->
      <TextField
              fx:id="usernameField"
              layoutX="196.0" layoutY="203.0"
              prefHeight="26.0" prefWidth="216.0"
              promptText="Username" />

      <!-- Password Field -->
      <TextField
              fx:id="passwordField"
              layoutX="195.0" layoutY="239.0"
              prefHeight="26.0" prefWidth="216.0"
              promptText="Password" />

      <!-- Login Button -->
      <Button
              fx:id="loginButton"
              layoutX="241.0" layoutY="229.0"
              mnemonicParsing="false"
              prefHeight="48.0" prefWidth="102.0"
              style="-fx-padding: 0; -fx-border-color: transparent; -fx-background-color: transparent;"
              onAction="#handleLogin">
         <graphic>
            <ImageView fitHeight="125.0" fitWidth="126.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../pngs/login_button.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>

      <!-- Staff Login Button -->
      <Button
              fx:id="staffLoginButton"
              layoutX="143.0" layoutY="273.0"
              mnemonicParsing="false"
              prefHeight="48.0" prefWidth="102.0"
              style="-fx-padding: 0; -fx-border-color: transparent; -fx-background-color: transparent;"
              onAction="#handleStaffLogin">
         <graphic>
            <ImageView fitHeight="125.0" fitWidth="126.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../pngs/staff_login.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>

      <!-- Customer Login Button -->
      <Button
              fx:id="customerLoginButton"
              layoutX="349.0" layoutY="273.0"
              mnemonicParsing="false"
              prefHeight="48.0" prefWidth="102.0"
              style="-fx-padding: 0; -fx-border-color: transparent; -fx-background-color: transparent;"
              onAction="#handleCustomerLogin">
         <graphic>
            <ImageView fitHeight="125.0" fitWidth="126.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../pngs/customer_login.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
