<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="847.0" prefWidth="1512.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymdb.controller.BuyProductController">
   <children>
      <ImageView fitHeight="850.0" fitWidth="1700.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../pngs/buyproduct_bg.png" />
         </image>
      </ImageView>

      <!-- Product Inventory Table -->
      <TableView fx:id="productTable" layoutX="137.0" layoutY="212.0" prefHeight="536.0" prefWidth="1206.0">
         <columns>
            <TableColumn fx:id="colID" prefWidth="150.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="300.0" text="Name" />
            <TableColumn fx:id="colCategory" prefWidth="200.0" text="Category" />
            <TableColumn fx:id="colPrice" prefWidth="200.0" text="Price" />
            <TableColumn fx:id="colStock" prefWidth="200.0" text="Stock Qty" />
            <TableColumn fx:id="colBuy" prefWidth="150.0" text="Buy" />
         </columns>
      </TableView>
      <Button fx:id="backBtn" layoutX="44.0" layoutY="42.0" mnemonicParsing="false" onAction="#handleBack" opacity="0.0" prefHeight="48.0" prefWidth="40.0" />
   </children>
</AnchorPane>
