<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane
        fx:controller="com.gymdb.controller.ShowEquipmentController"
        prefHeight="400.0" prefWidth="600.0"
        xmlns="http://javafx.com/javafx/24.0.1"
        xmlns:fx="http://javafx.com/fxml/1">

   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../pngs/showequipment_bg.png" />
         </image>
      </ImageView>

      <TableView fx:id="equipmentTable" layoutX="30.0" layoutY="40.0" prefHeight="280.0" prefWidth="540.0">
         <columns>
            <TableColumn fx:id="colName" text="Name" prefWidth="90.0"/>
            <TableColumn fx:id="colDescription" text="Description" prefWidth="110.0"/>
            <TableColumn fx:id="colQuantity" text="Qty" prefWidth="60.0"/>
            <TableColumn fx:id="colAmount" text="Amount" prefWidth="70.0"/>
            <TableColumn fx:id="colVendor" text="Vendor" prefWidth="90.0"/>
            <TableColumn fx:id="colContact" text="Contact" prefWidth="80.0"/>
            <TableColumn fx:id="colPurchaseDate" text="Purchase Date" prefWidth="100.0"/>
         </columns>
      </TableView>

      <Button fx:id="backBtn" layoutX="230.0" layoutY="345.0" mnemonicParsing="false" opacity="0.0"
              prefHeight="32.0" prefWidth="139.0" onAction="#handleBack" />
   </children>
</AnchorPane>
