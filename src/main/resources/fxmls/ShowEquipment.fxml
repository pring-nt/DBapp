<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymdb.controller.ShowEquipmentController">

   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../pngs/showequipment_bg.png" />
         </image>
      </ImageView>

      <TableView fx:id="equipmentTable" layoutX="20.0" layoutY="99.0" prefHeight="224.0" prefWidth="560.0">
         <columns>
            <TableColumn fx:id="colName" prefWidth="90.0" text="Name" />
            <TableColumn fx:id="colDescription" prefWidth="110.0" text="Description" />
            <TableColumn fx:id="colQuantity" prefWidth="60.0" text="Qty" />
            <TableColumn fx:id="colUnitPrice" prefWidth="70.0" text="Amount" />
            <TableColumn fx:id="colVendor" prefWidth="90.0" text="Vendor" />
            <TableColumn fx:id="colContact" prefWidth="80.0" text="Contact" />
            <TableColumn fx:id="colPurchaseDate" prefWidth="100.0" text="Purchase Date" />
         </columns>
      </TableView>

      <Button fx:id="backBtn" layoutX="230.0" layoutY="345.0" mnemonicParsing="false" onAction="#handleBack" opacity="0.0" prefHeight="32.0" prefWidth="139.0" />
   </children>
</AnchorPane>
