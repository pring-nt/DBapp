<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1020.0" prefWidth="1980.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymdb.controller.ShowEquipmentController">

   <children>
      <ImageView fitHeight="1000.0" fitWidth="1700.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../pngs/showequipment_bg.png" />
         </image>
      </ImageView>

      <TableView fx:id="equipmentTable" layoutX="571.0" layoutY="370.0" prefHeight="258.0" prefWidth="752.0">
         <columns>
            <TableColumn fx:id="colName" prefWidth="130.0" text="Name" />
            <TableColumn fx:id="colDescription" prefWidth="130.0" text="Description" />
            <TableColumn fx:id="colQuantity" text="Qty" />
            <TableColumn fx:id="colUnitPrice" text="Amount" />
            <TableColumn fx:id="colVendor" prefWidth="120.0" text="Vendor" />
            <TableColumn fx:id="colContact" prefWidth="120.0" text="Contact" />
            <TableColumn fx:id="colPurchaseDate" prefWidth="145.0" text="Purchase Date" />
         </columns>
      </TableView>

      <Button fx:id="backBtn" layoutX="50.0" layoutY="59.0" mnemonicParsing="false" onAction="#handleBack" opacity="0.0" prefHeight="44.0" prefWidth="48.0" />
      <Button fx:id="addBtn" layoutX="103.0" layoutY="371.0" mnemonicParsing="false" onAction="#handleAdd" opacity="0.0" prefHeight="44.0" prefWidth="186.0" />
      <Button fx:id="removeBtn" layoutX="99.0" layoutY="536.0" mnemonicParsing="false" onAction="#handleRemove" opacity="0.0" prefHeight="57.0" prefWidth="213.0" />
      <Button fx:id="updateBtn" layoutX="93.0" layoutY="731.0" mnemonicParsing="false" onAction="#handleUpdate" opacity="0.0" prefHeight="57.0" prefWidth="213.0" />
   </children>
</AnchorPane>
