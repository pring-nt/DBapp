<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="1020.0" prefWidth="1980.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymdb.controller.MembersActivityReportController">
    <children>
        <ImageView fitHeight="1000.0" fitWidth="1700.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../pngs/mem_report.png" />
            </image>
        </ImageView>

        <TableView fx:id="reportTable" layoutX="239.0" layoutY="426.0" prefHeight="183.0" prefWidth="619.0">
            <columns>
                <TableColumn fx:id="colMemberName" prefWidth="75.0" text="Member" />
                <TableColumn fx:id="colSessions" prefWidth="75.0" text="Sessions" />
                <TableColumn fx:id="colInitialWeight" prefWidth="75.0" text="Initial Weight" />
                <TableColumn fx:id="colGoalWeight" prefWidth="75.0" text="Goal Weight" />
                <TableColumn fx:id="colTargetChange" prefWidth="75.0" text="Target Change" />
                <TableColumn fx:id="colBMIChange" prefWidth="75.0" text="BMI Change" />
                <TableColumn fx:id="colTrend" prefWidth="75.0" text="BMI Trend" />
                <TableColumn fx:id="colHealthGoal" prefWidth="75.0" text="Health Goal" />
            </columns>
        </TableView>

        <BarChart fx:id="attendanceBarChart" layoutX="922.0" layoutY="325.0" prefHeight="335.0" prefWidth="446.0">
            <xAxis>
                <CategoryAxis fx:id="attendanceXAxis" side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="attendanceYAxis" autoRanging="false" lowerBound="0" side="LEFT" tickUnit="5" upperBound="15" />
            </yAxis>
        </BarChart>

        <ComboBox fx:id="cmbMemberReport" layoutX="243.0" layoutY="359.0" prefHeight="30.0" prefWidth="400.0" promptText="Select Member:" />
        <Button fx:id="backBtn" layoutX="60.0" layoutY="58.0" mnemonicParsing="false" onAction="#handleBack" opacity="0.0" prefHeight="49.0" prefWidth="37.0" text="Button" />
    </children>
</AnchorPane>
