<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymdb.controller.MainMenuController">

   <children>
      <!-- Background Image -->
      <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../pngs/mainmenu_bg.png" />
         </image>
      </ImageView>

      <!-- Main Menu Buttons -->
      <Button fx:id="membersTab" layoutX="27.0" layoutY="170.0" onAction="#handleMembersTab" opacity="0.0" prefHeight="81.0" prefWidth="86.0" />
      <Button fx:id="staffTab" layoutX="141.0" layoutY="170.0" onAction="#handleStaffTab" opacity="0.0" prefHeight="81.0" prefWidth="86.0" />
      <Button fx:id="equipmentsTab" layoutX="247.0" layoutY="170.0" onAction="#handleEquipmentsTab" opacity="0.0" prefHeight="81.0" prefWidth="94.0" />
      <Button fx:id="classTab" layoutX="360.0" layoutY="170.0" onAction="#handleClassTab" opacity="0.0" prefHeight="81.0" prefWidth="86.0" />
      <Button fx:id="progressTab" layoutX="469.0" layoutY="170.0" onAction="#handleProgressTab" opacity="0.0" prefHeight="81.0" prefWidth="94.0" />
      <Button fx:id="paymentsTab" layoutX="27.0" layoutY="272.0" onAction="#handlePaymentsTab" opacity="0.0" prefHeight="81.0" prefWidth="94.0" />
      <Button fx:id="attendanceTab" layoutX="137.0" layoutY="268.0" onAction="#handleAttendanceTab" opacity="0.0" prefHeight="81.0" prefWidth="86.0" />
      <Button fx:id="lockerTab" layoutX="247.0" layoutY="272.0" onAction="#handleLockerTab" opacity="0.0" prefHeight="81.0" prefWidth="94.0" />
      <Button fx:id="productsTab" layoutX="356.0" layoutY="268.0" onAction="#handleProductsTab" opacity="0.0" prefHeight="90.0" prefWidth="94.0" />
      <Button fx:id="reportsTab" layoutX="469.0" layoutY="272.0" onAction="#handleReportsTab" opacity="0.0" prefHeight="81.0" prefWidth="94.0" />
      <Button fx:id="backBtn" layoutX="264.0" layoutY="360.0" onAction="#handleBack" opacity="0.0" prefHeight="26.0" prefWidth="73.0" />

      <!-- TextAreas for Stats -->
      <TextArea fx:id="totalMembersField" editable="false" layoutX="40.0" layoutY="91.0" prefHeight="39.0" prefWidth="34.0" />
      <TextArea fx:id="activeMembersField" editable="false" layoutX="136.0" layoutY="90.0" prefHeight="41.0" prefWidth="34.0" />
      <TextArea fx:id="staffUsersField" editable="false" layoutX="519.0" layoutY="90.0" prefHeight="41.0" prefWidth="24.0" />
      <TextArea fx:id="activeTrainersField" editable="false" layoutX="424.0" layoutY="90.0" prefHeight="41.0" prefWidth="35.0" />
      <TextArea fx:id="availableEquipmentsField" editable="false" layoutX="233.0" layoutY="90.0" prefHeight="41.0" prefWidth="27.0" />
      <TextArea fx:id="totalEarningsField" editable="false" layoutX="326.0" layoutY="90.0" prefHeight="41.0" prefWidth="30.0" />

   </children>
</AnchorPane>
