         <image>
            <Image url="@../pngs/mainmenu_bg.png" />
         </image>
      </ImageView>

      <!-- Main Menu Buttons -->
      <Button fx:id="membersTab" layoutX="502.0" layoutY="65.0" onAction="#handleMembersTab" opacity="0.0" prefHeight="36.0" prefWidth="86.0" />
      <Button fx:id="staffTab" layoutX="614.0" layoutY="69.0" onAction="#handleStaffTab" opacity="0.0" prefHeight="28.0" prefWidth="60.0" />
      <Button fx:id="equipmentsTab" layoutX="690.0" layoutY="70.0" onAction="#handleEquipmentsTab" opacity="0.0" prefHeight="28.0" prefWidth="94.0" />
      <Button fx:id="classTab" layoutX="807.0" layoutY="69.0" onAction="#handleClassTab" opacity="0.0" prefHeight="30.0" prefWidth="49.0" />
      <Button fx:id="progressTab" layoutX="877.0" layoutY="69.0" onAction="#handleProgressTab" opacity="0.0" prefHeight="28.0" prefWidth="70.0" />
      <Button fx:id="paymentsTab" layoutX="959.0" layoutY="68.0" onAction="#handlePaymentsTab" opacity="0.0" prefHeight="28.0" prefWidth="78.0" />
      <Button fx:id="attendanceTab" layoutX="1050.0" layoutY="67.0" onAction="#handleAttendanceTab" opacity="0.0" prefHeight="30.0" prefWidth="91.0" />
      <Button fx:id="lockerTab" layoutX="1156.0" layoutY="65.0" onAction="#handleLockerTab" opacity="0.0" prefHeight="28.0" prefWidth="64.0" />
