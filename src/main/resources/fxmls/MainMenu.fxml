      <Button fx:id="reportsTab" layoutX="1347.0" layoutY="68.0" onAction="#handleReportsTab" opacity="0.0" prefHeight="28.0" prefWidth="64.0" />
      <Button fx:id="backBtn" layoutX="62.0" layoutY="57.0" onAction="#handleBack" opacity="0.0" prefHeight="45.0" prefWidth="33.0" />

      <!-- Transparent TextAreas for Stats -->
      <TextArea fx:id="totalMembersField" editable="false" layoutX="142.0" layoutY="790.0" prefHeight="40.0" prefWidth="71.0" style="-fx-background-color: transparent; -fx-control-inner-background: transparent; -fx-text-fill: black; -fx-border-color: transparent;" />
      <TextArea fx:id="activeMembersField" editable="false" layoutX="1344.0" layoutY="790.0" prefHeight="40.0" prefWidth="71.0" style="-fx-background-color: transparent; -fx-control-inner-background: transparent; -fx-text-fill: black; -fx-border-color: transparent;" />
      <TextArea fx:id="availableProductsField" editable="false" layoutX="360.0" layoutY="790.0" prefHeight="40.0" prefWidth="71.0" style="-fx-background-color: transparent; -fx-control-inner-background: transparent; -fx-text-fill: black; -fx-border-color: transparent;" />
      <TextArea fx:id="activeTrainersField" editable="false" layoutX="1136.0" layoutY="790.0" prefHeight="40.0" prefWidth="71.0" style="-fx-background-color: transparent; -fx-control-inner-background: transparent; -fx-text-fill: black; -fx-border-color: transparent;" />
