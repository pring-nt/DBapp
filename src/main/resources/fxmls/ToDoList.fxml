<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="800.0" prefWidth="1350.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymdb.controller.ToDoListController">

   <children>
      <ImageView fitHeight="850.0" fitWidth="1700.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../pngs/todolist_bg.png" />
         </image>
      </ImageView>

      <!-- TABLE -->
      <TableView fx:id="taskTable" layoutX="153.0" layoutY="199.0" prefHeight="428.0" prefWidth="1200.0">
         <columns>
            <TableColumn fx:id="colDescription" prefWidth="400.0" text="Description" />
            <TableColumn fx:id="colStatus" prefWidth="270.0" text="Status" />
            <TableColumn fx:id="colUpdate" prefWidth="270.0" text="Update" />
            <TableColumn fx:id="colRemove" prefWidth="270.0" text="Remove" />
         </columns>
      </TableView>

      <!-- ADD BUTTON -->
      <Button fx:id="addTaskBtn" layoutX="537.0" layoutY="656.0" onAction="#handleAddTask" opacity="0.0" prefHeight="46.0" prefWidth="165.0" />

      <!-- BACK BUTTON -->
      <Button fx:id="backBtn" layoutX="51.0" layoutY="36.0" onAction="#handleBack" opacity="0.0" prefHeight="54.0" prefWidth="33.0" />

      <Button fx:id="saveBtn" layoutX="756.0" layoutY="643.0" onAction="#handleSave" opacity="0.0" prefHeight="46.0" prefWidth="167.0" />

   </children>
</AnchorPane>
