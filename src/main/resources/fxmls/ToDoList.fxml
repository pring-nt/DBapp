<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gymdb.controller.ToDoListController">

   <children>
      <ImageView fitHeight="400" fitWidth="600" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../pngs/todolist_bg.png" />
         </image>
      </ImageView>

      <!-- TABLE -->
      <TableView fx:id="taskTable" layoutX="41.0" layoutY="107.0" prefHeight="187.0" prefWidth="520.0">
         <columns>
            <TableColumn fx:id="colDescription" prefWidth="200.0" text="Description" />
            <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
            <TableColumn fx:id="colUpdate" prefWidth="100.0" text="Update" />
            <TableColumn fx:id="colRemove" prefWidth="100.0" text="Remove" />
         </columns>
      </TableView>

      <!-- ADD BUTTON -->
      <Button fx:id="addTaskBtn" layoutX="193.0" layoutY="300.0" onAction="#handleAddTask" prefWidth="100" text="Add Task" />

      <!-- BACK BUTTON -->
      <Button fx:id="backBtn" layoutX="229.0" layoutY="345.0" onAction="#handleBack" opacity="0.0" prefHeight="30.0" prefWidth="143.0" />

      <Button fx:id="saveBtn" layoutX="322.0" layoutY="300.0" onAction="#handleSave" prefWidth="100" text="Save" />

   </children>
</AnchorPane>
